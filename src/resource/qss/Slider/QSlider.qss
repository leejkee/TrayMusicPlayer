QSlider::groove:vertical {
    border: none;
    background: #ccc;
    width: 5px;
}

QSlider::handle:vertical {
    background: gray;
    border-radius: 5px;
    height: 10px;
    width: 10px;
    margin: 0 -3px;
}

QSlider::sub-page:vertical {
    background: #ccc;
    border-radius: 2px;
}

QSlider::add-page:vertical {
    background: #666;
    border-radius: 2px;
}
