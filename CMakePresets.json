{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_PREFIX_PATH": "C:/Qt/6.8.2/mingw_64;${sourceDir}/dependencies/taglib_lib",
        "CMAKE_CXX_COMPILER": "C:/Qt/Tools/mingw1310_64/bin/g++.exe",
        "CMAKE_MAKE_PROGRAM": "C:/Qt/Tools/Ninja/ninja.exe"
      },
      "environment": {
        "PATH": "C:/Qt/6.8.2/mingw_64/bin;${sourceDir}/dependencies/taglib_lib/bin"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },

    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++",
        "CMAKE_C_COMPILER": "/usr/bin/gcc"
      },
      "environment": {
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    
    {
      "name": "windows-mingw-debug",
      "inherits": "windows-base",
      "binaryDir": "${sourceDir}/build/window-mingw-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },

    {
      "name": "windows-mingw-release",
      "inherits": "windows-base",
      "binaryDir": "${sourceDir}/build/window-mingw-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "linux-gcc-debug",
      "inherits": "linux-base",
      "binaryDir": "${sourceDir}/build/linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },

    {
      "name": "linux-gcc-release",
      "inherits": "linux-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }


  ],
  "buildPresets": [
    {
      "name": "win-debug",
      "configurePreset": "windows-mingw-debug",
      "configuration": "Debug"
    },

    {
      "name": "win-release",
      "configurePreset": "windows-mingw-release",
      "configuration": "Release"
    },

    {
      "name": "linux-gcc",
      "configurePreset": "linux-gcc-debug",
      "configuration": "Debug"
    }

  ]
}