QSlider::groove:vertical {
    background: #cccccc;
    width: 4px;
    border-radius: 2px;
}

QSlider::handle:vertical {
    background: transparent;
    border: none;
    height: 0px;
}

QSlider::sub-page:vertical {
    background: #e6e6e6;
    border-radius: 2px;
}

QSlider::add-page:vertical {
    background: gray;
    border-radius: 2px;
}
